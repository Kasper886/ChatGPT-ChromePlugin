{
  "manifest_version": 3,
  "name": "Google Meet Audio to ChatGPT",
  "version": "1.0",
  "permissions": ["activeTab", "tabCapture", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://meet.google.com/*"],
  "content_scripts": [
    {
      "matches": ["https://meet.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["processor.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}